<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>{% block title %}Tiquette{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css" integrity="sha384-Zug+QiDoJOrZ5t4lssLdxGhVrurbmBWopoEl+M6BdEfwnCJZtKxi1KgxUyJq13dy" crossorigin="anonymous">
    <link href="{{ asset('assets/styles/theme.css') }}" rel="stylesheet">
    {% block stylesheets %}{% endblock %}
</head>
<body>
<header>
    <div class="app-masthead">
        <div class="container">
            <nav class="nav">
                <a class="nav-link" href="{{ path('homepage') }}">Accueil</a>
                <a class="nav-link" href="{{ path('submit_ticket') }}">Vendre un ticket</a>
                {%  if not is_granted('IS_AUTHENTICATED_FULLY') %}
                <a class="nav-link" href="{{ path('member_sign_in') }}">Se connecter</a>
                <a class="nav-link" href="{{ path('member_sign_up') }}">S'inscrire</a>
                {% else %}
                    <a class="nav-link" href="{{ path('member_sign_out') }}">DÃ©connexion</a>
                {% endif %}
            </nav>
        </div>
    </div>

    <div class="app-header">
        <div class="container">
            <h1 class="app-title">Metinet</h1>
            <p class="lead app-description">Description</p>
        </div>
    </div>
</header>

<main class="container">
    <div class="row">
        <div class="col-sm-8 blog-main">
            <div class="app-post">
                {% block body %}{% endblock %}
            </div>
        </div>
    </div>
</main>

<footer class="app-footer">
    <p>Application built by Metinet students.</p>
    <p>
        <a href="#">Back to top</a>
    </p>
</footer>

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/js/bootstrap.min.js" integrity="sha384-a5N7Y/aK3qNeh15eJKGWxsqtnX/wWdSZSKp+81YjTmS15nvnvxKHuzaWwXHDli+4" crossorigin="anonymous"></script>
{% block javascripts %}{% endblock %}
</body>
</html>
